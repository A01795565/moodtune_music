{
  "info": {
    "name": "MoodTune Music API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health /health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Resolve /catalog/resolve",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Fix You\",\n  \"artist\": \"Coldplay\",\n  \"limit\": 1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/catalog/resolve",
          "host": ["{{baseUrl}}"],
          "path": ["catalog", "resolve"]
        }
      }
    },
